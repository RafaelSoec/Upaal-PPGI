int[0, 100] battery = 100;
bool has_resources = false;

clock t;

void updateValues(bool success){
    if(success == true){
        battery = (battery - distance ) &lt; 0 ? 0 : (battery - distance );
        successfulMissions++;
        missionComplete = true;
    }
    else{
        missionComplete = false;
        failedMissions++;
        battery = (battery - distance ) &lt; 0 ? 0 : (battery - distance );
    }
}

bool isLowBattery(){
   return ((battery &lt; 20) == true);
}


